<h2>Edit movie</h2>
<form action="/movies/{{edit._id}}/edit" method="post">

    <label for="title">Title:</label>
    <input type="text" name="title" id="title" value="{{edit.title}}">

    <label for="genre">Genre:</label>
    <input type="text" name="genre" id="genre" value="{{edit.genre}}">

    <label for="plot">Plot:</label>
    <input type="text" name="plot" id="plot" value="{{edit.plot}}">

    <select name="cast" id="cast">
        {{#each cels}}
        <option value="{{_id}}" selected="selected">{{name}}</option>
        {{/each}}
    </select>

    <button type="submit">Edit</button>
</form>